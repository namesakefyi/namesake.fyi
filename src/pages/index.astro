---
import { Image } from "astro:assets";
import heroIllustration from "~/assets/index/hero-form.png";
import Partners from "~/components/Partners.astro";
import { Content } from "~/content/pages/index.md";
import siteInfo from "~/data/site-info";
import BaseLayout from "~/layouts/BaseLayout.astro";
---

<BaseLayout title={siteInfo.name} description={siteInfo.description}>
  <div class="home">
    <h1>
      <span>Be seen for</span><br /><span class="who-you-are">who you are.</span
      >
    </h1>
    <div class="hero">
      <Image
        src={heroIllustration}
        alt="Some snails and flowers on top of a court order document"
        class="illustration"
        width={900}
        densities={[1, 2]}
      />
    </div>
    <div class="content">
      <Content />
    </div>
  </div>
  <Partners />
</BaseLayout>

<script>
  import { annotate } from "rough-notation";

  const whoYouAre: HTMLElement | null = document.querySelector(".who-you-are");
  if (whoYouAre) {
    const highlight = annotate(whoYouAre, {
      type: "highlight",
      iterations: 1,
    });
    highlight.show();
  }
</script>

<style lang="scss">
  .home {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero {
    padding-inline: var(--space-2xs);
    padding-block-start: var(--space-2xl);
    margin-inline: calc(-1 * var(--space-m));
    position: relative;
  }

  .illustration {
    max-width: 100%;
    user-select: none;
    pointer-events: none;
    mix-blend-mode: multiply;
  }

  h1 {
    text-align: center;
    font-size: var(--step-7);

    @media (width < 420px) {
      font-size: var(--step-6);
    }

    span {
      white-space: nowrap;
    }
  }

  .who-you-are {
    color: var(--bg);
  }

  .content {
    padding-block-start: var(--space-xl);
    max-width: 760px;
    font-size: var(--step-1);

    :global(p) + :global(p) {
      margin-top: var(--space-l);
    }

    @media (width < 540px) {
      font-size: var(--step-0);
    }
  }
</style>
