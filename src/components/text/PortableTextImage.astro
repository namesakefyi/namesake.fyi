---
import { PortableText as PortableTextInternal } from "astro-portabletext";
import SanityImage from "../SanityImage.astro";

const { asset, alt, caption, width } = Astro.props.node;
---

<SanityImage
  asset={asset}
  alt={alt}
  options={{
    width,
  }}
>
  <PortableTextInternal value={caption} />
</SanityImage>
