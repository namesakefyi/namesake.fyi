---
import "../styles/reset.css";
import "../styles/theme.css";
import "../styles/base.css";
import { AstroFont } from "astro-font";
import { join } from "node:path";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import siteInfo from "../data/site-info";

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogAlt?: string;
}

const {
  title,
  description = siteInfo.description,
  ogImage = siteInfo.image.src,
  ogAlt = siteInfo.image.alt,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageTitle = Astro.url.pathname === "/" ? title : `${title} Â· Namesake`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light" />
    <meta name="theme-color" content="#CDA5EF" />
    <link rel="icon" href="/favicon.ico?v3" sizes="32x32" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v3" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={new URL(ogImage, Astro.url.origin)} />
    <meta property="og:image:alt" content={ogAlt} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Namesake" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{pageTitle}</title>
    <AstroFont
      config={[
        {
          name: "Alte Haas Grotesk",
          src: [
            {
              style: "normal",
              weight: "400",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "AlteHaasGroteskRegular.woff2"
              ),
            },
            {
              style: "bold",
              weight: "600",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "AlteHaasGroteskBold.woff2"
              ),
            },
          ],
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
          cssVariable: "font-sans",
        },
      ]}
    />
    <script>
      import * as Fathom from "fathom-client";
      Fathom.load("GQAJEJLZ");
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <style>
      main {
        flex: 1;
        padding: var(--space-2xl) var(--space-l);
        min-width: 0;
        width: 100%;
        max-width: 1200px;
        margin-inline: auto;
        display: flex;
        flex-direction: column;
      }
    </style>
  </body>
</html>
